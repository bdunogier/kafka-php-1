#!/usr/bin/env php
<?php

/**
 * Consumer daemon
 *
 * Script that will listen for events to a given topic.
 *
 * @author      Pau Gay <pau.gay@visualdna.com>
 * @date        2012-11-15
 */

// bootstrap
require dirname(__FILE__) . "/../src/Kafka/Kafka.php";

$connector = $argv[1];
$topic = $argv[2];

$cc = new \Kafka\ConsumerConnector($connector);
$messageStreams = $cc->createMessageStreams($topic, 65535 * 10);

while (true) {
    $fetchCount = 0;

    foreach ($messageStreams as $mid => $messageStream) {
        while ($message = $messageStream->nextMessage()) {
            var_dump($message->payload());
            echo "\n";
        }
    }

    if ($fetchCount == 0) {
        sleep(1);
    }
}
